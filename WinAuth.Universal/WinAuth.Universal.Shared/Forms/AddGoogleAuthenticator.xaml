               Text="2. Click"
               Width="51"
               x:Name="step2Label" />
        <Button Canvas.Left="113"
            Canvas.Top="274"
            Content="Verify Authenticator"
            Height="23"
            Width="158"
            x:Name="verifyButton" />
        <RadioButton Canvas.Left="229"
                 Canvas.Top="121"
                 Content=""
