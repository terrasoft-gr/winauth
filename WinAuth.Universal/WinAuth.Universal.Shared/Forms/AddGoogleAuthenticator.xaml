        <RadioButton Canvas.Left="153"
                 Canvas.Top="121"
                 Content=""
                 Height="13"
                 Width="14"
                 x:Name="icon2RadioButton" />
        <RadioButton Canvas.Left="77"
                 Canvas.Top="121"
                 Content=""
