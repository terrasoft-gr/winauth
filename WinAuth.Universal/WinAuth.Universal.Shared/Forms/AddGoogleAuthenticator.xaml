            x:Name="cancelButton" />
        <Image Canvas.Left="173"
           Canvas.Top="104"
           Height="48"
           Width="48"
           x:Name="icon2" />
        <Image Canvas.Left="97"
           Canvas.Top="104"
           Height="48"
           Width="48"
           x:Name="icon1" />
        <Button Canvas.Left="292"
            Canvas.Top="414"
            Content="OK"
            Height="23"
            Width="75"
            x:Name="okButton" />
        <TextBlock Canvas.Left="23"
               Canvas.Top="118"
               Height="17"
               Text="Icon:"
               Width="29"
               x:Name="iconLabel" />
        <TextBox Canvas.Left="25"
