<Page mc:Ignorable="d"
      x:Class="WinAuth.Universal.GetPasswordForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WinAuth.Universal"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              x:Name="cvsGetPasswordForm">
    <TextBlock Height="17"
               Text="strings.InvalidPassword"
               Width="123"
               x:Name="invalidPasswordLabel" />
    <Button Content="strings.OK"
            Height="23"
            Width="75"
            x:Name="okButton" />
    <Button Content="strings.Cancel"
            Height="23"
            Width="75"
            x:Name="cancelButton" />
    <TextBox Height="20"
             Text=""
             Width="277"
             x:Name="passwordField" />
  </StackPanel>
</Page>
