                 x:Name="icon2RadioButton" />
    <RadioButton Canvas.Left="78"
                 Canvas.Top="122"
                 Content=""
                 Height="13"
                 Width="14"
                 x:Name="icon1RadioButton" />
    <CheckBox Canvas.Left="262"
              Canvas.Top="472"
