<Page mc:Ignorable="d"
      x:Class="WinAuth.Universal.UnprotectPasswordForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WinAuth.Universal"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Canvas Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          x:Name="cvsUnprotectPasswordForm">
    <TextBlock Canvas.Left="23"
               Canvas.Top="89"
               Height="17"
               Text="strings.InvalidPassword"
               Width="123"
               x:Name="invalidPasswordLabel" />
    <Button Canvas.Left="144"
            Canvas.Top="116"
            Content="strings.OK"
            Height="23"
            Width="75"
            x:Name="okButton" />
    <Button Canvas.Left="225"
            Canvas.Top="116"
            Content="strings.Cancel"
            Height="23"
            Width="75"
            x:Name="cancelButton" />
    <TextBox Canvas.Left="23"
             Canvas.Top="63"
             Height="20"
             Text=""
             Width="277"
             x:Name="passwordField" />
  </Canvas>
</Page>
